<%

links = [
  (link_to(repo.production_url.gsub("https://", ""), repo.production_url, class: "govuk-link") if repo.production_url),
  (link_to("Sentry (error tracking)", repo.sentry_url, class: "govuk-link") if repo.sentry_url),
  (link_to("Manage repo", repo.management_url, class: "govuk-link") if repo.management_url),
  (link_to("API docs", repo.api_docs_url, class: "govuk-link") if repo.api_docs_url),
  (link_to("Component guide", repo.component_guide_url, class: "govuk-link") if repo.component_guide_url),
]

if links.any?
%>
<ul class="govuk-list">
  <% links.each do |link| %>
    <li><%= link %></li>
  <% end %>
<% end %>
